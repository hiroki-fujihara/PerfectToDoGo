<h1>Listing Chatlogs</h1>
<table style="background-color: silver", class="table table-striped table-hover">
   
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="background-color: white">
    <% @chatlogs.each do |chatlog| %>
      <tr>
        <td><%= chatlog.user_id %></td>
        <td><%= chatlog.content %></td>
        <% if chatlog.user_id == session[:usrname] %>
          <td><%= link_to '削除', chatlog, method: :delete %></td>
        <% end %>
      </tr> 
    <% end %>
  </tbody>
</table>

<%= paginate @chatlogs %>

<%= form_for(@chatlog) do |f| %>
  <% if @chatlog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chatlog.errors.count, "error") %> prohibited this chatlog from being saved:</h2>

      <ul>
      <% @chatlog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<br><br>
  <div class="field"> 
    <%= f.label :user_id %><br>
    <%= f.text_area :user_id, :value => session[:usrname], :readonly => true %></br>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, :size => "30x20" %>
  </div>
  <div class="actions" align = center>
    <%= f.submit %>
  </div>
<% end %>
