<p id="notice"><%= notice %></p>

<h1>Listing Chatlogs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chatlogs.each do |chatlog| %>
      <tr>
        <td><%= chatlog.user_id %></td>
        <td><%= chatlog.content %></td>
        <td><%= chatlog.group_id %></td>
        <td><%= link_to 'Show', chatlog %></td>
        <td><%= link_to 'Edit', edit_chatlog_path(chatlog) %></td>
        <td><%= link_to 'Destroy', chatlog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chatlog', new_chatlog_path %>
