<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>名前|</th>
      <th>詳細内容|</th>
      <th>〆切|</th>
      <th>重要度|</th>
      <th>指定|</th>
      <th>添付ファイル|</th>
      <th colspan="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.day %></td>
        <td><%= task.important %></td>
        <td><%= task.s_date %></td>
        <td><%= task.file %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

