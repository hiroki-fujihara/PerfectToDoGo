<h1><font color="#ff0000">期限が切れています!!</font></h1>
<table border="5">
 <thead>
  <tr>
   <th><font color="#ff0000">予定名</font></th>
   <th><font color="#ff0000">詳細内容</font></th>
   <th><font color="#ff0000">予定日</font></th>
   <th><font color="#ff0000">重要度</font></th>
   <th><font color="#ff0000">指定日</font></th>
   <th><font color="#ff0000">添付ファイル</font></th>
  </tr>
 </thead>

 <tbody>
  <% @tasks.each do |task| %>
  <tr>


  <% if (task.day) < (Date.today) %>
   <td>
   <% if (task.day) - (Date.today) < 0 %>
    <font color="red"><%= task.name %></font>
   <% else %>
    <font color="black"><%= task.name %></font>
   <% end %>
   </td>
   <td>
   <% if (task.day) - (Date.today) < 0 %>
    <font color="red"><%= task.content %></font>
   <% else %>
    <font color="black"><%= task.content %></font>
   <% end %>
   </td>
   <td>
   <% if (task.day) - (Date.today) <= 0 %>
    <font color="red"><%= task.day %></font>
   <% else %>
    <font color="black"><%= task.day %></font>
   <% end %>
   </td>
   <td>
   <% if (task.day) - (Date.today) <= 0 %>
    <font color="red"><%= task.important %></font>
   <% else %>
    <font color="black"><%= task.important %></font>
   <% end %>
   </td>
   <td>
   <% if (task.day) - (Date.today) <= 0 %>
    <font color="red"><%= task.s_date %></font>
   <% else %>
    <font color="black"><%= task.s_date %></font>
   <% end %>
   </td>
   <td>
   <% if (task.day) - (Date.today) <= 0 %>
    <font color="red"><%= task.file %></font>
   <% else %>
    <font color="black"><%= task.file %></font>
   <% end %>
   </td>

  <td><%= link_to '詳細', task %></td>
  <td><%= link_to '更新', edit_task_path(task) %></td>
  <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除しますか' } %></td>

 </tr>
 <% end %>
<% end %>
 </tbody>
</table>

<br>
<br>
<br>
                              
