<h1>Login#index</h1>
<p>Find me in app/views/login/index.html.erb</p>
<p style="color : Red"><%= @error %></p>
<%= form_tag action: :auth do %>
  <div class="field">
    <%= label_tag :user_name, 'ユーザーID' %>:<br />
    <%= text_field_tag :user_name, '' %>
  </div>
  <div class="field">
    <%= label_tag :mailadd, 'メールアドレス' %>:<br />
    <%= text_field_tag :mailadd, '' %>
  </div>
  <%= hidden_field_tag :referer, flash[:referer] %>
  <%= submit_tag 'ログイン' %>
<% end %>
<%= link_to '新規登録', users_path %>