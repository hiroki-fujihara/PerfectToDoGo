<p id="notice"><%= notice %></p>

<div style="position:absolute; top:180px; left:870px;">

<h1>完了したタスク</h1>

<table>
  <thead>
    <tr>
      <th>終了日</th>
      <th>予定名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fin_tasks.each do |fin_task| %>
      <tr>
        <td><%= fin_task.fin_day %></td>
        <td><%= fin_task.task_id %></td>
        <td><%= link_to '詳細', fin_task %></td>
        <td><%= link_to '更新', edit_fin_task_path(fin_task) %></td>
        <td><%= link_to '削除', fin_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

