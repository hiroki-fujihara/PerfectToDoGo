<h1>月曜日</h1>
<table border="5">
  <thead>
    <tr>
      <th>day</th>
      <th>Name</th>
      <th>Important</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oneweeks.each do |oneweek| %>
      <tr>
        <% if oneweek.day.wday == 1 && Date.today.day + 7 > oneweek.day.day %>
          <td><%= oneweek.day %></td>
          <td><%= oneweek.name %></td>
          <td><%= oneweek.important %></td>
          <td><%= link_to 'Show', oneweek %></td>
          <td><%= link_to 'Edit', edit_oneweek_path(oneweek) %></td>
          <td><%= link_to 'Destroy', oneweek, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>
<br>

